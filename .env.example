# ═══════════════════════════════════════════
# lily_website — Unified Environment Variables
# ═══════════════════════════════════════════

# === 1. GENERAL SETTINGS ===
# DEBUG: True (development), False (production)
DEBUG=True
DOMAIN_NAME=yourdomain.com
# DJANGO_SETTINGS_MODULE: core.settings.dev, core.settings.prod
DJANGO_SETTINGS_MODULE=core.settings.dev
SECRET_KEY=django-insecure-change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
# SITE_BASE_URL: https://lily-salon.de/ (Must include protocol and trailing slash)
SITE_BASE_URL=http://localhost:8000/


# === 2. DATABASE SETTINGS (Django) ===
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

DATABASE_URL

# === 3. REDIS SETTINGS ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === 4. TELEGRAM BOT SETTINGS ===
BOT_TOKEN=your_bot_token_here
SUPERUSER_IDS=
OWNER_IDS=
BOT_DATA_MODE=api

# === 5. WORKER & EMAIL SETTINGS ===
SMTP_HOST=smtp.spacemail.com
SMTP_PORT=465
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=False

# === 6. MONITORING (Grafana Cloud) ===
GCLOUD_HOSTED_METRICS_URL=
GCLOUD_HOSTED_METRICS_ID=
GCLOUD_HOSTED_LOGS_URL=
GCLOUD_HOSTED_LOGS_ID=
GCLOUD_RW_API_KEY=

# === 7. LOGGING ===
LOG_LEVEL=DEBUG
